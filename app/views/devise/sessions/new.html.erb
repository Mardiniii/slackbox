      <section class="hero">
        <div class="container">
          <div class="row">
            <div class="col-md-6 col-md-offset-3">
              <div style="background: rgba(0,0,0,0.7);padding: 50px;border-radius: 8px;">
                <%= image_tag 'logo.png?v=0.2', class:'logo' %>
                <p>
                  <%= link_to "Sign in with Slack", user_omniauth_authorize_path(:slack),style:'color:white;text-decoration:underline;' %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <% if Rails.env.development? %>
      <div class="container">
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <h1>Only visible in development</h1>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label :uid %><br />
              <%= f.text_field :uid, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
            </div>

            <% if devise_mapping.rememberable? -%>
            <div class="checkbox">
              <label>
                <%= f.check_box :remember_me %>
                Remember me
              </label>
            </div>
            <% end -%>

            <div class="actions">
              <%= f.submit "Log in" %>
            </div>
            <% end %>

            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
      <% end %>
