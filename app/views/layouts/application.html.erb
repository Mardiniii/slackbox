<!DOCTYPE html>
<html>
<head>
  <title>Slackbox</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="alerts">
    <% if notice %> <div class="alert alert-success"><%= notice %> <span>x</span></div> <% end %>
    <% if alert %> <div class="alert alert-danger"><%= alert %> <span>x</span></div> <% end %>
  </div>
  <%= yield %>

</body>
</html>
<script>
  $(".alert").fadeIn(500).css("opacity","0.85").delay( 6000 ).fadeOut( 1000 );
  $('.alerts').on('click','.alert',function(){ $(this).remove() });
</script>